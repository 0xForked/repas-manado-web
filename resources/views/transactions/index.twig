{% extends "/template/base.twig" %}
{% block title %}Transaction{% endblock %}
{% block body_content %}

    <!-- Begin Page Content -->
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Transaction list ({{data.transaction|length}})</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th rowspan="2" width="50">No</th>
                                <th rowspan="2">Title</th>
                                <th rowspan="2">Building Identity</th>
                                <th colspan="3" class="text-center">Payment</th>
                            </tr>
                            <tr>
                                <th>Total</th>
                                <th>Status</th>
                                <th>Time</th>
                            </tr>
                        </thead>
                        <tbody>
                            {# {% for market in data.markets %}
                                <tr>
                                    <td>{{loop.index}}</td>
                                    <td>{{market.title}}</td>
                                    <td>{{market.address}}</td>
                                    <td class="text-center">
                                        <a
                                            href="#"
                                            class="btn btn-success btn-icon-split btn-sm"
                                            data-toggle="modal"
                                            data-target="#editMarket"
                                            data-market="{{market.id}}"
                                        >
                                            <span class="icon text-white-50">
                                                <i class="fas fa-edit fa-sm text-white-55"></i>
                                            </span>
                                            <span class="text"> edit</span>
                                        </a>
                                        <a
                                            href="#"
                                            class="btn btn-danger btn-icon-split btn-sm"
                                            data-toggle="modal"
                                            data-target="#deleteModal"
                                            onclick="deleteData({{market.id}}, 'markets')"
                                        >
                                            <span class="icon text-white-50">
                                                <i class="far fa-trash-alt fa-sm text-white-55"></i>
                                            </span>
                                            <span class="text"> delete</span>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %} #}
                        </thead>
                    </table>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container-fluid -->

    {# {% include '/markets/add.twig' %} #}
    {# {% include '/markets/edit.twig' %} #}

{% endblock %}