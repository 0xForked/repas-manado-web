{% extends "/template/base.twig" %}
{% block title %}Merchant Owner{% endblock %}
{% block body_content %}

    <!-- Begin Page Content -->
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Merchant Owner</h1>
            <a
                href="#"
                data-toggle="modal"
                data-target="#addOwner"
                class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
                    <i class="fas fa-plus fa-sm text-white-50"></i>
                    Add new Owner
                </a>
        </div>

        {% include '/template/partials/flash.twig' %}

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Merchant Owner list ({{data.owners|length}})</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th width="50">No</th>
                                <th>Name</th>
                                <th>Indentity Type</th>
                                <th>Indentity Number</th>
                                <th>Phone</th>
                                <th width="200">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for owner in data.owners %}
                                <tr>
                                    <td>{{loop.index}}</td>
                                    <td>{{owner.name}}</td>
                                    <td>{{owner.identity_type}}</td>
                                    <td>{{owner.identity_number}}</td>
                                    <td>{{owner.phone}}</td>
                                    <td class="text-center">
                                        <a
                                            href="#"
                                            class="btn btn-success btn-icon-split btn-sm"
                                            data-toggle="modal"
                                            data-target="#editOwner"
                                            data-owner="{{owner.id}}"
                                        >
                                            <span class="icon text-white-50">
                                                <i class="fas fa-edit fa-sm text-white-55"></i>
                                            </span>
                                            <span class="text"> edit</span>
                                        </a>
                                        <a
                                            href="#"
                                            class="btn btn-danger btn-icon-split btn-sm"
                                            data-toggle="modal"
                                            data-target="#deleteModal"
                                            onclick="deleteData({{owner.id}}, 'merchant/owners')"
                                        >
                                            <span class="icon text-white-50">
                                                <i class="far fa-trash-alt fa-sm text-white-55"></i>
                                            </span>
                                            <span class="text"> delete</span>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->

    {% include '/merchants/owner/add.twig' %}
    {% include '/merchants/owner/edit.twig' %}

{% endblock %}